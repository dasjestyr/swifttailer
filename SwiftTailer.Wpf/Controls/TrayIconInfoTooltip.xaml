<UserControl x:Class="SwiftTailer.Wpf.Controls.TrayIconInfoTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SwiftTailer.Wpf.Controls"
             xmlns:vm="clr-namespace:SwiftTailer.Wpf.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <!-- a simple user control which displays a fixed text within a border -->
    <Border
    Background="White"
    BorderBrush="Orange"
    BorderThickness="2"
    CornerRadius="4"
    Opacity="0.8"
    Width="160"
    Height="40">
        <TextBlock
      Text=""
      HorizontalAlignment="Center"
      VerticalAlignment="Center" />
    </Border>
</UserControl>
